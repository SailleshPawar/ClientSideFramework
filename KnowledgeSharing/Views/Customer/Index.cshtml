
@{
    ViewBag.Title = "Index";
}
<style>

    .hidden{
        display:none
    }
    .email{
       background-color:aqua
    }
</style>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<form>
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control hidden" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">First Name</label>
        <input type="text" class="form-control" id="firstName" placeholder="Password">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Last Name</label>
        <input type="text" class="form-control" id="lastName" placeholder="Password">
    </div>
    <button type="button" class="btn btn-primary" id="btnEmail">TellMECustomerEmail</button>
    <button type="button" class="btn btn-primary" id="btnFirstLast">TellMECustomerFirstNameAndLastName</button>
</form>
@section scripts
{
    <script>
        $(function () {
            $("#btnEmail").click(function () {
                $("#exampleInputEmail1").removeClass("hidden");
               // $("#exampleInputEmail1").css("display", "block");
                //alert("Email of user is " + $("#exampleInputEmail1").val());
            })

            $("#btnFirstLast").click(function () {
                alert("FuleName of user is " + $("#firstName").val() + " " + $("#lastName").val());
            })
        }
        );
    </script>
}